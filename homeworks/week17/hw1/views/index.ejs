<!DOCTYPE html>
<html>
<head>
  <%- include('./template/head')%>
</head>
<body>
  <nav class="navbar">
    <%- include('./template/nav') %>
  </nav>
  <section class="banner">
    <%- include('./template/section')%>
  </section>
  <!-- 文章預覽 -->
  <div class="container-wrapper">
    <div class="posts">
      <% comments.forEach((comment) => { %>
        <article class="post">
          <div class="post__header">
            <div><%= comment.title %></div>
            <div class="post__actions">
              <% if(userId) { %>
                <a class="post__action" href="/edit/<%= comment.id %>">編輯</a>
              <% } %>
            </div>
          </div>
          <div class="post__info">
            <%= comment.createdAt.toLocaleString('zh-TW') %>
          </div>
          <div class="post__content__hidden">
            <%= comment.content %>
          </div>
          <a class="btn-read-more" href="/readmore/<%= comment.id %>">READ MORE</a>
        </article>
      <% }) %>
    </div>
  </div>
  <!-- 頁次 -->

  <footer>
    <%- include('./template/footer') %>
  </footer>
</body>
</html>