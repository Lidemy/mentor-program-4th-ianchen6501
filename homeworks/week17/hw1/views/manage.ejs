<!DOCTYPE html>

<html>
<head>
  <%- include('./template/head') %>
</head>

<body>
  <nav class="navbar">
    <%- include('./template/nav') %>
  </nav>
  <section class="banner">
    <%- include('./template/section')%>
  </section>
  <!-- 文章預覽 -->
  <div class="container-wrapper">
    <div class="posts">
      <% comments.forEach((comment) => {%>
        <article class="post">
          <div class="post__header">
            <div><%= comment.title %></div>
            <div class="post__actions">
              <a class="post__action" href="/readmore/<%= comment.id %>">觀看文章</a>
              <a class="post__action" href="/edit/<%= comment.id %>">編輯</a>
              <a class="post__action" href="/delete/<%= comment.id %>">刪除</a>
            </div>
          </div>
        </article>
      <% }) %>
    </div>
  </div>
  <!-- 頁次 -->
  <div class="page-change">
    <!-- 頁次待處理 -->
  </div>
  <%- include('./template/footer') %>
</body>
</html>